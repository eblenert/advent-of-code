{
  "compilerOptions": {
    "target": "es2023",
    "module": "commonjs", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@lib/*": ["../lib/*"]
    }
  },
  "references": [
    {
      "path": "../lib"
    }
  ]
}
